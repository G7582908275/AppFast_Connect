# 备用配置：如果Flutter 3.35.2仍然有问题，可以使用这个配置
# 将flutter_lints降级到与Dart 3.5.0兼容的版本

name: appfast_connect
description: "AppFast Connect - VPN Connection Manager"
publish_to: 'none'

version: 1.0.0+1

environment:
  sdk: '>=3.5.0 <4.0.0'

build:
  compression: true
  
dependencies:
  flutter:
    sdk: flutter

  cupertino_icons: ^1.0.8
  tray_manager: ^0.5.1
  window_manager: ^0.5.1
  provider: ^6.1.2
  path_provider: ^2.1.2
  http: ^1.1.0
  shared_preferences: ^2.2.2
  flutter_secure_storage: ^9.0.0
  fl_chart: ^0.66.2

dev_dependencies:
  flutter_test:
    sdk: flutter
  flutter_lints: ^5.0.0  # 降级到与Dart 3.5.0兼容的版本

flutter:
  uses-material-design: true
  assets:
    - assets/icons/
    - assets/libs/core

# 构建脚本
scripts:
  prebuild: scripts/copy_kernel.sh
